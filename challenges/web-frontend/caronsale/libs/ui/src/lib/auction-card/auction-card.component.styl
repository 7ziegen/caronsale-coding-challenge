
$image-height = 146px

.auction-card
  background-color: $accent;
  width 100%
  height 80%
  min-width: 300px
  overflow hidden

.image-container
  height $image-height
  background-color #fff
  position relative
  overflow: hidden
  margin 0
  text-align left

.image-background
  height $image-height * 3
  position absolute
  width 100%
  background-size cover
  filter blur(10px)
  background filter(blur(5px))
  background-position center
  background-repeat no-repeat

.auction-image
  height $image-height
  display block
  margin-left auto
  margin-right auto
  max-width 100%
  min-width 200px
  filter blur(0px)


::ng-deep mat-grid-tile .mat-grid-tile .mat-figure {
    align-items: left;  /*vertical alignment*/
    justify-content: left;  /*horizontal alignment*/
}

.green-color {
  color: rgb(67, 219, 67) !important;
}

.red-color {
  color: rgb(255, 66, 66) !important;
}
