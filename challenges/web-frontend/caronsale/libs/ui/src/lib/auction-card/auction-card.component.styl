$image-height = 146px

.auction-card
  width 100%
  height 80%

.image-container
  height $image-height
  background-color #fff
  position relative
  overflow: hidden
  margin 0
  text-align left

.image-background
  height $image-height * 3
  position absolute
  width 100%
  background-size cover
  filter blur(10px)
  background filter(blur(5px))
  background-position center
  background-repeat no-repeat

.auction-image
  height $image-height
  display block
  margin-left auto
  margin-right auto
  max-width 100%
  min-width 200px
  filter blur(0px)
